<% provide(:title, 'Создать аккаунт') %>
<h1>Создать аккаунт</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, method: "post") do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name, "ФИО" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :code, "Пригласительный код" %>
      <%= f.text_field :code, class: 'form-control' %>

      <%= f.label :password, "Пароль", class: 'hide' %>
      <%= f.password_field :password, class: 'form-control hide', value: '123321' %>

      <%= f.label :admin, class: "checkbox inline" do %>
        <%= f.check_box :admin, class: "col-md-9"%>
        <span>Права администратора</span>
      <% end %>
      <%= f.submit "Создать аккаунт", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
