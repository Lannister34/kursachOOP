<% provide(:title, 'Создать тест') %>
<% if logged_in? %>
<div class="row">
<div class="col-md-5 center-a">
<%= form_with scope: :tests, method: :post, local: true do |form| %>
 <%= render 'shared/error_tests' %>
  <p>
    <%= form.text_field :title, class: 'form-control', placeholder: 'Введите название теста' %>
    <%= form.text_field :points, class: 'form-control', placeholder: 'Введите кол-во баллов за вопрос' %>
    <%= form.text_field :theme, class: 'hidden', value: params[:theme] %>
    <%= label_tag :questions_file, "Вопросы:" %>
    <%= form.file_field :questions_file  %>  

    <%= label_tag :answers_file, "Ответы:" %>
    <%= form.file_field :answers_file  %>

    <%= form.submit "Создать тест", class: "btn btn-md btn-default create-theme" %>
<% end %>
</div>
</div>
<% end %>
